{
	"name": "abinnovision-actions",
	"repository": "git@github.com:abinnovision/commons.git",
	"version": "0.0.0-development",
	"author": {
		"name": "AB INNOVISION UG (limited liability)",
		"email": "info@abinnovision.com",
		"url": "https://abinnovision.com/"
	},
	"private": true,
	"license": "proprietary",
	"engineStrict": true,
	"engines": {
		"node": ">=16"
	},
	"packageManager": "yarn@3.4.1",
	"workspaces": [
		"packages/*"
	],
	"devDependencies": {
		"@commitlint/cli": "^17.4.2",
		"@commitlint/config-angular": "^17.4.2",
		"@ocular-d/vale-bin": "^1.10.37",
		"husky": "^8.0.0",
		"lint-staged": "^13.1.0",
		"prettier": "^2.8.3"
	},
	"scripts": {
		"commitlint:check": "commitlint --config .commitlintrc.yaml --edit",
		"prettier:check": "prettier --ignore-path .gitignore --check '**/*.{json,json5,yaml,yml}'",
		"prettier:fix": "prettier --ignore-path .gitignore --write '**/*.{json,json5,yaml,yml}'",
		"vale:check": "vale **/*.md",
		"postinstall": "husky install && vale sync",
		"link": "ls packages | while read package; do ln -s \"packages/$package\" \".$package\"; done"
	},
	"lint-staged": {
		"**/*.{json,json5,yaml,yml,md}": [
			"prettier"
		],
		"**/*.md": [
			"vale"
		]
	}
}
